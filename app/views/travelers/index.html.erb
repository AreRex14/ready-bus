<p id="notice"><%= notice %></p>

<h1>Travelers</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Phone no</th>
      <th>Ic no</th>
      <th>Age</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @travelers.each do |traveler| %>
      <tr>
        <td><%= traveler.first_name %></td>
        <td><%= traveler.last_name %></td>
        <td><%= traveler.phone_no %></td>
        <td><%= traveler.ic_no %></td>
        <td><%= traveler.age %></td>
        <td><%= link_to 'Show', traveler %></td>
        <td><%= link_to 'Edit', edit_traveler_path(traveler) %></td>
        <td><%= link_to 'Destroy', traveler, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Traveler', new_traveler_path %>
