<% if current_user.admin_role? %>
  <p id="notice"><%= notice %></p>

  <h1>Bookings</h1>

  <table>
    <thead>
      <tr>
        <th>Seat label</th>
        <th>Fare</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @bookings.each do |booking| %>
        <tr>
          <td><%= booking.seat_label %></td>
          <td><%= booking.fare %></td>
          <td><%= link_to 'Show', booking %></td>
          <td><%# link_to 'Edit', edit_booking_path(booking) %></td>
          <td><%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Booking', new_booking_path, :class => "btn btn-primary btn-sm" %>
<% end %>